<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.ckh01.user.firstapp.FrameActivity">

    <!--
        dp(dip) Device Independent pixel
        안드로이드는 다양한 해상도를 고려하여
        px이나 pt단위 등을 사용하는 대신 dp를 사용한다.   -->
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#ff0000"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#00ff00"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="text"
        android:textSize="40dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#FFE400"
        android:text="text1"
        android:textSize="20dp"
        android:textColor="#0100FF"
        android:gravity="right|center"
        android:layout_gravity="right|bottom"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#000"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4da768"
        android:layout_gravity="center"/>

</FrameLayout>
